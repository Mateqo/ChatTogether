<div class="registration">
    <div class="registration__card">
        <img src="/img/logo.png" alt="logo" class="registration__card--logo">
        <h1 class="section-heading registration__card-header">Zarejestruj się</h1>
        <form class="registration__form">

            <div class="registration__form-box">
                <label for="name" class="form-label">Nazwa użytkownika:  </label>
                <input type="text" id="name" class="form-input">
            </div>

            <div class="registration__form-box">
                <label for="password" class="form-label">Hasło:  </label>
                <input type="password" id="password" class="form-input">
            </div>

            <div class="registration__form-box">
                <label for="password" class="form-label">Powtórz hasło:  </label>
                <input type="password" id="password" class="form-input">
            </div>

            <div class="registration__form-box">
                <label for="email" class="form-label">Email:   </label>
                <input type="email" id="email" class="form-input">
            </div>

            <div class="registration__form-box">
                <label for="email" class="form-label">Powtórz email:   </label>
                <input type="email" id="email" class="form-input">
            </div>

            <div class="registration__form-box">
                <label for="date" class="form-label">Data urodzenia:   </label>
                <input type="date" id="date" class="form-input">
            </div>


            <div class="registration__form-checkboxes">
                <p>Wyrażam zgodę na:</p>
                <div>
                    <input type="checkbox" id="regulamin" name="regulamin">
                    <label for="regulamin">Regulamin</label>
                </div>
                <div>
                    <input type="checkbox" id="horns" name="RODO">
                    <label for="horns">RODO</label>
                </div>
            </div>

            <div class="registration__form-buttons">
                <button type="submit" class="form-button">Zarejestruj</button>
                <a href="@Url.Action("Login", "Home")" class="registration__form-link">Masz już konto?</a>
            </div>

        </form>
    </div>

</div>